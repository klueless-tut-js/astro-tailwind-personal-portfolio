---
export interface Props {
  label: string;
  classExtra?: string;
}

const { label, classExtra = '' } = Astro.props;
const linkClass = `nav-dot block w-7 h-7 rounded-full border-4 border-nav bg-body ${classExtra}`;
---
<a href="#" class={linkClass}>
  <span class='bg-black px-2 py-1 rounded-md ml-10 opacity-0'>{label}</span>
</a>

<style>
  .nav-dot {
    transition: background 200ms, border-color 200ms;
  }

  .selected-circle {
    @apply border-theme bg-theme;
  }

  .nav-dot:hover span {
    opacity: 1;
  }
</style>