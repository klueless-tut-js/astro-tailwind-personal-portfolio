---
import HeroCircle from './HeroCircle.astro';
---

<div class="container mt-16 flex justify-between items-center mx-auto px-8 md:px-14 lg:px-24 w-full">
  <div class="flex flex-wrap md:flex-nowrap">
    <nav class="inline-block lg:mr-24 lg:w-4 fixed left-percentage hidden xl:block">
      <div class="absolute left-50 transform -translate-x-1/2 space-y-6 mt-36">
        <HeroCircle label='Home' classExtra='selected-circle' />
        <HeroCircle label='Work'/>
        <HeroCircle label='Clients'/>
        <HeroCircle label='Hire'/>
      </div>
    </nav>

    <div class="flex flex-wrap lg:ml-20 justify-center md:justify-start max-w-xl mt-0 md:my-36">
      <h1>
        <span class="font-bold text-6xl md:text-7xl lg:text-8xl text center md:text-left">
          KlueLess
        </span>
        <br/>
        <span class="font-bold text-3xl md:text-4xl lg:text-5xl text center md:text-left">
          The <span class="text-theme">Klue</span> is to <span class="text-theme">Less</span>
        </span>
      </h1>
    </div>
  </div>

</div>
